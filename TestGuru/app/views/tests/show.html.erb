<center>

  <h1><%= @test.title%> Test</h1>
  <table border='1'>
    <tr>
      <th>Title</th>
      <th>Level</th>
      <th>Tag</th>
      <th>Author</th>
      <th></th>
    </tr>
    <tr>
      <td><%= @test.title %></td>
      <td><%= @test.level %></td>
      <td><%= @test.category.body %></td>
      <td><%= @test.author.name %></td>
      <td><%= button_to 'Start', start_test_path(@test) %></td>
    </tr>
  </table>

  <h2>Questions list</h2>

  <%= render @test.questions %>

  <h2>
    <%= link_to 'Back', tests_path%> 
    <%= link_to 'Create new question', new_test_question_path(@test)%>
  </h2>

</center>
