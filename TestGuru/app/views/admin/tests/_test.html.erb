<tr>
  <td>
      <%= content_tag :span, test.title,
                      class: 'test-title',
                      data: { test_id: test.id} %>
      <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td><%= test.author.first_name %></td>
  <td><%= link_to "Show", admin_test_path(test), action: :show, id: test.id %></td>
  <td><%= link_to 'Edit', edit_admin_test_path(test), 
                          class: 'form-inline-link',
                          data: { test_id: test.id} %> </td>
</tr>
